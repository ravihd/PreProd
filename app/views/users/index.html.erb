<h1>Listing all users ...</h1>
<p>
    <%= link_to "Create New User", new_user_path %>
</p>

<table>
    <tr>
        <th>Useranme</th>
        <th>Email</th>
        <th>Password</th>
        
    </tr>
    
    <% @userdetials.each do |details| %>
    <tr>
        <td><%=details.username%></td>
        <td><%=details.email%></td>
        <td><%=details.password%></td>
        <td><%= link_to "Edit", edit_user_path(details)%></td>
        <td><%= link_to "Show", user_path(details)%></td>
        <td><%= link_to "Delete", user_path(details), method: :delete, data: {confirm: "Are you sure.."}%></td>
        
    </tr>
    
    <% end %>
    
    
</table>



